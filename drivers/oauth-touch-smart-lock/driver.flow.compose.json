{
  "triggers": [
    {
      "id": "opened",
      "title": {
        "en": "Opened",
        "nl": "Geopened"
      },
      "titleFormatted": {
        "en": "Opened",
        "nl": "Geopened"
      }
    },
    {
      "id": "key_state",
      "title": {
        "en": "Key changes bolt state",
        "nl": "Sleutel veranderd vergrendeling"
      },
      "titleFormatted": {
        "en": "Key [[key]] did [[boltState]] the door",
        "nl": "Sleutel [[key]] heeft de deur [[boltState]]"
      },
      "args": [
        {
          "type": "autocomplete",
          "name": "key",
          "title": { "en": "name", "nl": "name" },
          "placeholder": { "en": "John", "nl": "Jan" }
        },
        {
          "type": "dropdown",
          "name": "boltState",
          "title": {
            "en": "Bolt state",
            "nl": "Vergrendeling"
          },
          "values": [
            { "id": "NIGHT_LOCK", "title": { "en": "lock", "nl": "vergrendeld" } },
            { "id": "DAY_LOCK", "title": { "en": "unlocked", "nl": "ontgrendeld" } },
            { "id": "OPEN", "title": { "en": "opened", "nl": "geopend" } }
          ]
        }
      ]
    },
    {
      "id": "open_house_mode",
      "title": {
        "en": "Open house mode",
        "nl": "Open huis mode"
      },
      "titleFormatted": {
        "en": "Open house mode [[mode]]",
        "nl": "Open huis mode [[mode]]"
      },
      "args": [
        {
          "type": "dropdown",
          "name": "mode",
          "title": { "en": "enabled/disabled", "nl": "ingeschakeld/uitgeschakeld" },
          "values": [
            { "id": "enabled", "title": { "en": "enabled", "nl": "ingeschakeld" } },
            { "id": "disabled", "title": { "en": "disabled", "nl": "uitgeschakeld"} }
          ]
        }
      ]
    }
  ],
  "actions": [
    {
      "highlight": true,
      "id": "open",
      "title": {
        "en": "Open",
        "nl": "Open"
      },
      "titleFormatted": {
        "en": "Open",
        "nl": "Open"
      }
    },
    {
      "highlight": true,
      "id": "set_open_house_mode",
      "title": {
        "en": "Set Open House Mode",
        "nl": "Stel de Open Huis-modus in"
      },
      "titleFormatted": {
        "en": "Set Open House Mode to [[open_house_mode]]",
        "nl": "Stel de Open Huis-modus in op [[open_house_mode]]"
      },
      "args": [
        {
          "type": "checkbox",
          "name": "open_house_mode",
          "title": { "en": "enabled/disabled", "nl": "ingeschakeld/uitgeschakeld" }
        }
      ]
    }
  ]
}
