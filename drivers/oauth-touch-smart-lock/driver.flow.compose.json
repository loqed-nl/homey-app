{
  "triggers": [
    {
      "id": "oauth_lock_state_changed",
      "title": {
        "en": "Lock state changed",
        "nl": "Slot status gewijzigd"
      },
      "hint": {
        "en": "Lock status is changed.",
        "nl": "Slot status is gewijzigd."
      },
      "tokens": [
        {
          "type": "string",
          "name": "lockState",
          "title": {
            "en": "Lock state",
            "nl": "Slot status"
          },
          "example": {
            "en": "OPEN, DAYLOCK, NIGHTLOCK",
            "nl": "OPEN, DAYLOCK, NIGHTLOCK"
          }
        },
        {
          "type": "string",
          "name": "keyAccountEmail",
          "title": {
            "en": "Email address",
            "nl": "E-mailadres"
          },
          "example": {
            "en": "john@example.com",
            "nl": "jan@voorbeeld.nl"
          }
        }
      ]
    },
    {
      "id": "opened",
      "$filter": "capabilities=open",
      "title": {
        "en": "Opened",
        "nl": "Geopend"
      },
      "titleFormatted": {
        "en": "Opened",
        "nl": "Geopend"
      }
    },
    {
      "id": "key_state",
      "title": {
        "en": "Key changes bolt state",
        "nl": "Sleutel veranderd vergrendeling"
      },
      "titleFormatted": {
        "en": "Key [[key]] [[boltState]] the door",
        "nl": "Sleutel [[key]] heeft de deur [[boltState]]"
      },
      "args": [
        {
          "type": "autocomplete",
          "name": "key",
          "title": {
            "en": "name",
            "nl": "name"
          },
          "placeholder": {
            "en": "John",
            "nl": "Jan"
          }
        },
        {
          "type": "dropdown",
          "name": "boltState",
          "title": {
            "en": "Bolt state",
            "nl": "Vergrendeling"
          },
          "values": [
            {
              "id": "NIGHT_LOCK",
              "title": {
                "en": "locked",
                "nl": "vergrendeld"
              }
            },
            {
              "id": "DAY_LOCK",
              "title": {
                "en": "unlocked",
                "nl": "ontgrendeld"
              }
            },
            {
              "id": "OPEN",
              "title": {
                "en": "opened",
                "nl": "geopend"
              }
            }
          ]
        }
      ]
    },
    {
      "id": "open_house_mode_changed",
